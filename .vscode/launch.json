{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "NodeDebug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--watch",
        "src",
        "--ext",
        "ts",
        "--exec",
        "node -r ts-node/register/transpile-only"
      ],
      "args": [
        "src/artikelTool.ts"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}